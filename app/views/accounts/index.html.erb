
<h1>My Accounts</h1>
<!-- Make sure they have active account(s) -->
<% if @accounts.count > 0 %>
<main>
  <table id="indexTable" class="table table-striped">
    <thead>
      <tr>
        <th>Account Number</th>
        <th>Type</th>
        <th>Balance</th>
        <th>Transaction</th>
        <th>History</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
        <!-- Iterate through accounts and display info and actions -->
        <% for account in @accounts do %>
        <tr>
          <td><%= '%012d' % account.id %></td>
          <td><%= AcctType.find(account.acct_type_id).name %></td>
          <td><%= number_to_currency(account.balance)%></td>
          <!-- Action links -->
          <td class="dropdown">
         <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown" role="button" aria-expanded="false">Transfer funds<span class="caret"></span></a>
         <ul class="dropdown-menu" role="menu">
           <li><%= link_to 'Intra Bank Transfer', new_account_acct_transactions_path(:account_id => account.id, :transaction_type_id => 6), :class => "btn btn-default" %></li>
           <li><%= link_to 'Wire Transfer', new_account_acct_transactions_path(:account_id => account.id, :transaction_type_id => 9), :class => "btn btn-default" %> <%#= link_to 'Wire Transfer', new_account_recipient_details_path(:account_id => account.id, :transaction_type_id => 9), :class => "btn btn-default" %></li>
        </ul></td>     
          <td><%= link_to 'Show', account, :class => "btn btn-default" %></td>
          <td><%= link_to 'Close This Account', account, method: :delete, data: { confirm: 'Are you sure you want to close this account?' } %></td>
        </tr>
        <% end %>
      
    </tbody>
  </table>
 <% unless !admin? %>
  <br>
    <div id="links-block">
    <%= link_to 'Add a New Account', new_account_path, :class => "btn btn-primary"  %>
    </div>
  <% end %>
</main>
<!-- Conditionally show "No accounts" message if customer has no accounts -->
<% else %>
      <div class="jumbotron" style="text-align: center; border: 1px solid #DDD; background: rgba(255,255,255,0.3); border-radius: 2px;">
      <h1 style="margin: 0;">No accounts to display</h1>
      </div>
<% end %>

