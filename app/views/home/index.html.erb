<!-- "Home" page partial - dynamically rendered according to role and login state -->

<aside class="actionPanel">
  <h1>Let's do this!</h1>
  <p>
  	<% if user_signed_in? %>
  	<h4>You're already signed in, <%= current_user.username %>. Would you like to</h4>
      <% unless current_user.role == 'admin' %>
       <span role=button><%= link_to "View Your Accounts?", accounts_path(current_user), :class => "btn btn-warning btn-lg" %></span>
      <% else %>
      <span role=button><%= link_to 'Continue to Administrator Dashboard', adminview_administrator_path(current_user), :class => 'btn btn-warning btn-lg' %></span>
      <% end %>
    	<h4>or</h4>
  	<span role=button><%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => "btn btn-danger btn-lg" %></span>
  	<% else %>
  	<span role=button><%= link_to "Sign in", new_user_session_path, :class => "btn btn-success btn-lg" %></span>
  	<span role=button><%= link_to "Create an Account", new_user_registration_path, :class => "btn btn-primary btn-lg" %></span>
  	<% end %>
  </p>
  <br />
  <p style="font-size: 10pt; color: #000; background: #EEE">
  Phone: 800-555-1212<br />
  E-mail: <%= mail_to "barnabasjbulpett@students.abtech.edu", "accounts@capstonesavings.com", :style=>"color: #000;font-size: 10pt;" %>
</p>
</aside>
  <div id="homeCarousel" class="carousel slide" data-interval="3000" data-ride="carousel">
      <!-- Carousel indicators -->
      <ol class="carousel-indicators">
          <li data-target="#homeCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#homeCarousel" data-slide-to="1"></li>
          <li data-target="#homeCarousel" data-slide-to="2"></li>
      </ol>   
      <!-- Carousel items -->
      <div class="carousel-inner">
          <div class="item active">
              <div class="carousel-caption">
                <h1>Savings is our middle name</h1>
                <h3>Now offering 0.99&#37; APY!</h3>
                <p><em><%= link_to "Open an account today!", new_user_registration_path %></em></p>
              </div>
          </div>
          <div class="item">
              <div class="carousel-caption">
                <h1>It's all for you!</h1>
                <h3>See what we're about</h3>
                <p><em><%= link_to "Learn more", home_about_path %></em></p>
              </div>
          </div>
          <div class="item">
              <div class="carousel-caption">
                <h1>Questions?</h1>
                <h3>Help is just a click away!</h3>
                <p><em><%= link_to "Visit the help page", home_help_path %></em></p>
              </div>
          </div>
      </div>
      <!-- Carousel nav -->
      <a class="carousel-control left" href="#homeCarousel" role="button" data-slide="prev">
<!--         <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span> -->
        &lsaquo;
      </a>
      <a class="carousel-control right" href="#homeCarousel" role="button" data-slide="next">
<!--         <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span> -->
        &rsaquo;
      </a>
  </div>


